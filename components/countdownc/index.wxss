/* pages/comment/switch/switch.wxss */
.radio-box {
	width: 50px;
	height: 100%;
	margin-right: 28rpx;
	justify-content: center;
	align-items: center;
}
.row {
	display: flex;
	flex-direction: row;
}
 
.radio {
	width: 80rpx;
	height: 30rpx;
	background-color: #fe6969;
	border-radius: 30rpx;
	border: 3rpx solid #f5f5f5;
	padding-left: 3rpx;
	padding-right: 3rpx;
	align-items: center;
}
 
.circle {
	width: 30rpx;
	height: 30rpx;
	background-color: #fff;
	border-radius: 50%;
	display: flex;
	justify-content: center;
	align-items: center;
  margin-left: 56rpx;
}
 
.centerline {
	width: 3rpx;
	height: 16rpx;
	background-color: #e0e4ed;
}
 
.centercir {
	width: 10rpx;
	height: 10rpx;
	border: 3rpx solid #e0e4ed;
	border-radius: 50%;
	background-color: #fff;
}