.popup_title{font-size: 36rpx; font-weight: 900; margin-left: 270rpx; border-bottom: solid 5rpx #fc4850; width: 150rpx; text-align: center; padding-bottom: 10rpx;}
.close {
  position: absolute;
  right: 15rpx;
  top: 30rpx;
  width: 50rpx;
  height: 50rpx;
}
.close:before, .close:after {
  position: absolute;
  right: 30rpx;
  content: ' ';
  height: 40rpx;
  width: 2px;
  background-color: #333;
}
.close:before {
  transform: rotate(45deg);
}
.close:after {
  transform: rotate(-45deg);
}

