<view class="recommend">
  <view
    class="reco_k"
    wx:for="{{recommendedList}}"
    wx:key="index">
    <view class="reco_img">
        <image src="{{item.logoSrc}}" mode="widhthFix"></image>
    </view>
    <view class="reco_text">
      <view class="reco_text_title">{{item.title}}</view>
      <view class="reco_text_introduction">{{item.desc}}</view>
      <view class="reco_buy">
        <view
          class="buy_img"
          wx:for="{{item.buyImages}}"
          wx:for-index="imgSub"
          wx:for-item="imgSubSrc"
          wx:key="this">
          <image 
            src="{{imgSubSrc}}" 
            mode="widhthFix">
            </image>
        </view>
        <view class="buy_num">等{{item.buyCount}}人购买</view>
      </view>
    </view>
  </view>
</view>