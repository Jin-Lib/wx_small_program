.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
page{background-color: #f7f7f7}

.carousel{width: 100vw; padding-bottom: 10px; padding-top: 10px; background-color: #ffffff; float: left;}
.carousel_frame{width: 90vw; margin-left: 5vw;overflow: hidden; height: 170px; float: left;}
.carousel_frame image{width: 100vw;}
.classification{width: 94vw; margin-left: 3vw;  margin-top: 20px; font-size: 22rpx; float: left;}
.leaderboard{width: 18.6vw; float: left; overflow: hidden; text-align: center;}
.lead_img{width: 18.6vw; overflow: hidden; float: left;}
.lead_img image{width: 30px; height: 30px;}
.category{ width: 90vw; margin-left: 5vw; margin-top: 15px; float: left;}
.explosion{font-size: 32rpx; border-left: 3px solid #fc4850; padding-left: 3vw; width: 85vw; font-weight: 900;}
.more{float: right; font-size: 24rpx; font-weight: 200; margin-top: 3px;}
.more i {border: solid black; border-width: 0 1px 1px 0;display: inline-block; padding: 4px;margin-left: 3px;}
.more_right {transform: rotate(-45deg);-webkit-transform: rotate(-45deg);}
.explosion_course{width: 90vw; margin-top: 15px; margin-left: 5vw; float: left; background-color: #fff; border-radius: 10px; position: relative; overflow: hidden;}
.course_img{margin-left: 2vw; width: 86vw; height: 130px; overflow: hidden; margin-top: 10px; border-radius: 10px;}
.course_img image{width: 86vw;}
.coures_text{margin-left: 4vw; float: left; margin-top: 8px; margin-bottom: 8px; width: 60vw;}
.text_title{font-size: 28rpx; font-weight: 900;}
.text_Introduction{font-size: 22rpx; color: #686868; width: 100vw; overflow: hidden; height: 14px;}
.spike{float: right; margin-right: 3vw; background-color: #fc4850; padding: 3px 8px; border-radius: 15px; color: #fff; font-size: 24rpx; margin-top: 8px;}
.spike i{font-size: 34rpx; font-weight: 900; margin-right: 3px;}
.time_top{position: absolute;top: 0;right: 0; background-color: #f86f22;padding: 3px 18px; font-size: 20rpx; color: #fff;}
.arrival{width: 90vw;padding-bottom: 15px; margin-top: 15px; margin-left: 5vw; float: left; background-color: #fff; border-radius: 10px; position: relative; overflow: hidden;}
.arri_img{margin-left: 2vw; width: 86vw; height: 130px; overflow: hidden; margin-top: 10px; border-radius: 10px;}
.arri_img image{width: 86vw;}
.arri_text{margin-left: 4vw; float: left; margin-top: 8px; width: 45vw;}
.arri_title{font-size: 28rpx; font-weight: 900;}
.arri_Introduction{font-size: 22rpx; color: #686868; width: 100vw; overflow: hidden; height: 14px;}
.arri_spike{float: right; margin-right: 3vw; background-color: #f86f22; padding: 3px 8px; color: #fff; font-size: 20rpx; margin-top: 13px;}
.arri_sort{float: left; width: 88vw; margin-top: 0px; margin-left: 2vw;}
.sort_k{width: 38vw;margin-left:3.5vw; float: left; overflow: hidden; margin-top: 20px;}
.sort_img{width: 100%; height: 140px; overflow: hidden; border-radius: 10px;}
.sort_title{font-size: 28rpx; font-weight: 900; margin-left: 2vw; margin-top: 5px;}
.sort_spike{ margin-left: 2vw; float: left;background-color: #f86f22; padding: 2px 8px;color: #fff; font-size: 20rpx; margin-top: 5px;}
.change{float: left; margin-top: 20px; font-size: 24rpx; padding: 5px 22px;color: #f86f22; background-color: #f7f7f7; border-radius: 15px; margin-left: 32vw;}



.db{width: 100vw; height: 100px; float: left;}