.scho_title{position: absolute; top: 15rpx; left: 30rpx; font-size: 44rpx; color: #fff;}
.scho_rule{position: absolute;right: 0rpx;top: 20rpx; padding:15rpx 10rpx; font-size: 24rpx; background-color: #f86f22;width: 25rpx;color: #fff;}
.scho_k{position: absolute; float: left; width: 635rpx;top:130rpx; left: 30rpx; background-color: #fff; padding: 30rpx 30rpx; border-radius: 15rpx; font-size: 24rpx; text-align: center;}
.scho_grandtotal{float: left;width: 307rpx; border-right: 3rpx solid #aaa;}
.scho_withdraw{float: right;width: 305rpx;}
.scho_num{margin-top: 20rpx; font-size: 32rpx; font-weight: 900;}
.recording{ float: left; width: 635rpx;margin-top:120rpx; margin-left: 30rpx; background-color: #fff; padding: 30rpx 30rpx; border-top-right-radius: 15rpx;border-top-left-radius: 15rpx; font-size: 26rpx;margin-bottom: 130rpx;}
.scho_t_rule{position: fixed; height: 100%; width: 100%; top:0rpx;left:0; z-index: 999; background: rgba(0,0,0,0.7)}
.t_rule_k{width: 485rpx; margin-left:105rpx; background-color: #fff; padding: 40rpx 30rpx; border-radius: 15rpx; margin-top: 100rpx; position: relative;}
.t_rule_title{width: 485rpx; text-align: center; font-size: 30rpx; font-weight: 900;}
.t_rule_text{margin-top: 30rpx; background: rgba(252, 72,80 ); padding: 15rpx 20rpx; border-radius: 15rpx; font-size: 26rpx; color: #fff; height: 500rpx;}
.t_rule_text_title{font-size: 28rpx; font-weight: 700; margin-top: 40rpx;}
.t_rule_text_text{font-size: 22rpx; margin-top: 10rpx; margin-left: 15rpx; width: 440rpx;}
.close {
  position: absolute;
  right: 0rpx;
  top: 10rpx;
  width: 50rpx;
  height: 50rpx;
}
.close:before, .close:after {
  position: absolute;
  right: 30rpx;
  content: ' ';
  height: 40rpx;
  width: 2px;
  background-color: #333;
}
.close:before {
  transform: rotate(45deg);
}
.close:after {
  transform: rotate(-45deg);
}











