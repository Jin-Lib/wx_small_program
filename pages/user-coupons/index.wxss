page{background-color: #f7f7f7;}

.bc_white{width: 725rpx;padding-left: 25rpx; background-color:#fff; position: fixed;top:0;padding-top: 10px;   z-index: 999; display: flex;flex-wrap: wrap;}
.default1{text-align:center;flex:1;color:#000;font-size:24rpx;  padding: 8px 0px;padding-bottom: 25rpx;}
.red1{text-align:center;flex:1;font-weight:bold;font-size:24rpx;color:#fc4850;border-bottom: solid 3rpx #fc4850; padding: 8px 0px;padding-bottom: 25rpx;}
.show1{display:block;margin-top: 110rpx;}
.hidden1{display:none;margin-top: 110rpx;}
.coupon{width: 700rpx; margin-left: 25rpx;display: flex;margin-top: 30rpx;position: relative;overflow: hidden;}
.coupon_left{background-color: #fc4850;width: 200rpx;font-size: 26rpx; color: #fff; height: 200rpx; line-height:190rpx; text-align: center;border-top-left-radius: 15rpx;border-bottom-left-radius: 15rpx;}
.coupon_expired{position: absolute;top: 20rpx;left: -50rpx;padding: 8rpx 60rpx; font-size: 22rpx; background-color:#f86f22;color: #fff; transform: rotate(-45deg);-webkit-transform: rotate(-45deg);}
.coupon_left i{font-size: 58rpx;}
.coupon_right{background-color: #fff;padding-left: 20rpx;height: 200rpx;width: 480rpx;border-top-right-radius: 15rpx;border-bottom-right-radius: 15rpx;position: relative;}
.coupon_title{font-size: 28rpx; color: #000;font-weight: 900; margin-top: 15rpx;}
.coupon_time{font-size: 24rpx; color: #6b6b6b;border-bottom: solid 3rpx #e2e2e2;margin-top: 20rpx;padding-bottom: 15rpx;}
.coupon_only{font-size: 24rpx; color: #6b6b6b;margin-top: 30rpx;}
.coupon_use{position: absolute;top: 35rpx;right: 30rpx; font-size: 24rpx; height: 45rpx; line-height: 45rpx;width: 130rpx; text-align: center; background-color: #f86f22; border-radius: 50rpx; color: #fff;}

.used_img{width: 750rpx; text-align: center;margin-top: 120rpx;float: left;}
.used_img image{width: 120rpx;}
.used_title{margin-top: 20rpx;font-size: 26rpx;color: #6b6b6b;}
.expired_left{background-color: #cccccc;}
.expired_use{position: absolute;top: 15rpx;right: 30rpx;  width: 90rpx;}
.expired_use image{width: 90rpx;}