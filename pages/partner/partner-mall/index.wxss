.bottom_popup_time{position: absolute; top: 320rpx;left: 270rpx;color: #fff40e;font-size: 40rpx;}
.close {
  position: absolute;
  right: 50rpx;
  top: 150rpx;
  width: 60rpx;
  height: 60rpx;
}

.close:before, .close:after {
  position: absolute;
  right: 30rpx;
  content: ' ';
  height: 50rpx;
  width: 3px;
  background-color: #fff;
}

.close:before {
  transform: rotate(45deg);
}

.close:after {
  transform: rotate(-45deg);
}

@keyframes shaking{
  0% {
    -webkit-transform: translateX(3px) rotate(2deg);
  }
  20% {
    -webkit-transform: translateX(-3px) rotate(-2deg);
  }
  40% {
    -webkit-transform: translateX(3px) rotate(2deg);
  }
  60% {
    -webkit-transform: translateX(-3px) rotate(-2deg);
  }
  80% {
    -webkit-transform: translateX(3px) rotate(2deg);
  }
  100% {
    -webkit-transform: translateX(0px) rotate(0deg);
  }
}